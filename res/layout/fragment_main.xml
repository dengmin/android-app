<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myattr="http://schemas.android.com/apk/res/com.dengmin.app"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <com.dengmin.app.ui.SlidingSwitcherView
            myattr:auto_play="true"
	        android:id="@+id/slidingLayout"
	        android:layout_width="fill_parent"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dip"
	        android:layout_marginTop="10dip"
	        android:layout_height="150dip" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/e" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/home" />
            
            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/b" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/c" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="60dip"
            android:layout_height="20dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="15dip"
            android:orientation="horizontal" >
        </LinearLayout>
    </com.dengmin.app.ui.SlidingSwitcherView>

        <TableLayout
            android:id="@+id/tableLayout_travel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:paddingTop="5dip" >

                <!-- 1 -->

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="127dp"
                        android:background="#FF3366"
                        android:gravity="top"
                        android:padding="5dip"
                        android:text="新品上架"
                        android:textColor="#ffffff"
                        android:drawableBottom="@drawable/shop_buy"
                        android:textSize="15dip" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="126dp"
                        android:layout_marginTop="10dip"
                        android:background="#FF6600"
                        android:drawableBottom="@drawable/shop_girl"
                        android:gravity="top"
                        android:padding="5dip"
                        android:text="待发货"
                        android:textColor="#ffffff"
                        android:textSize="15dip" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="10dip"
                        android:layout_weight="1"
                        android:background="#009933"
                        android:drawableBottom="@drawable/shop_girl"
                        android:gravity="top"
                        android:padding="5dip"
                        android:text="待付款"
                        android:textColor="#ffffff"
                        android:textSize="15dip" />
                </LinearLayout>
                <!-- 2 -->

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#CC33FF"
                        android:drawableBottom="@drawable/home_train"
                        android:gravity="top"
                        android:padding="10dip"
                        android:text="商品"
                        android:textColor="#ffffff"
                        android:textSize="15dip" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="109dp"
                        android:layout_marginTop="10dip"
                        android:background="#00CCFF"
                        android:drawableBottom="@drawable/home_scenery"
                        android:gravity="top"
                        android:padding="5dip"
                        android:text="合作伙伴"
                        android:textColor="#ffffff"
                        android:textSize="15dip" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:background="#99CC00"
                        android:drawableBottom="@drawable/home_lastmin"
                        android:gravity="top"
                        android:padding="5dip"
                        android:text="统计查询"
                        android:textColor="#ffffff"
                        android:textSize="15dip" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:background="#FFCC00"
                        android:drawableBottom="@drawable/home_lastmin"
                        android:gravity="top"
                        android:padding="5dip"
                        android:text="评价信息"
                        android:textColor="#ffffff"
                        android:textSize="15dip" />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>