<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/network_layout"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:background="#fcf3ee"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/main_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:src="@drawable/net_warn_icon"
                />

            <ProgressBar
                android:id="@+id/main_bar"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:visibility="gone" />

            <TextView
                android:id="@+id/main_tip_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dip" />

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="33dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:gravity="center"
                android:text="查看详情"
                android:textSize="11sp" />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_width="fill_parent"
            android:layout_height="150dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip" />

        <TableLayout
            android:id="@+id/tableLayout_travel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:paddingTop="5dip" >

                <!-- 1 -->

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="127dp"
                        android:background="#FF3366"
                        android:drawableBottom="@drawable/shop_buy"
                        android:gravity="top"
                        android:padding="5dip"
                        android:text="新品上架"
                        android:textColor="#ffffff"
                        android:textSize="15dip" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="126dp"
                        android:layout_marginTop="10dip"
                        android:background="#FF6600"
                        android:drawableBottom="@drawable/shop_girl"
                        android:gravity="top"
                        android:padding="5dip"
                        android:text="待发货"
                        android:textColor="#ffffff"
                        android:textSize="15dip" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="10dip"
                        android:layout_weight="1"
                        android:background="#009933"
                        android:drawableBottom="@drawable/shop_girl"
                        android:gravity="top"
                        android:padding="5dip"
                        android:text="待付款"
                        android:textColor="#ffffff"
                        android:textSize="15dip" />
                </LinearLayout>
                <!-- 2 -->

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="5dip" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#CC33FF"
                        android:drawableBottom="@drawable/home_train"
                        android:gravity="top"
                        android:padding="10dip"
                        android:text="商品"
                        android:textColor="#ffffff"
                        android:textSize="15dip" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="109dp"
                        android:layout_marginTop="10dip"
                        android:background="#00CCFF"
                        android:drawableBottom="@drawable/home_scenery"
                        android:gravity="top"
                        android:padding="5dip"
                        android:text="合作伙伴"
                        android:textColor="#ffffff"
                        android:textSize="15dip" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:background="#99CC00"
                        android:drawableBottom="@drawable/home_lastmin"
                        android:gravity="top"
                        android:padding="5dip"
                        android:text="统计查询"
                        android:textColor="#ffffff"
                        android:textSize="15dip" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:background="#FFCC00"
                        android:drawableBottom="@drawable/home_lastmin"
                        android:gravity="top"
                        android:padding="5dip"
                        android:text="评价信息"
                        android:textColor="#ffffff"
                        android:textSize="15dip" />
                </LinearLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>